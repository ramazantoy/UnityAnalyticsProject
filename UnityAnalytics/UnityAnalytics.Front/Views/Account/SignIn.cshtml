@model UserSignInModel
<!DOCTYPE html>

<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign In</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css"/>
    <style>
        .required-star {
            color: red;
            margin-left: 0.25rem;
        }
    </style>
</head>
<body>

<section class="mt-4 mx-auto">
    <div class="container">
        <div class="form-container">
            <form asp-action="SignIn" method="post" class="p-4 shadow rounded bg-white">
                <input type="hidden" asp-for="ReturnUrl"/>
                <h2 class="text-center mb-4">Sign In</h2>
                <div class="mb-3">
                    <label class="form-label">
                        User Name
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </label>
                    <input asp-for="UserName" class="form-control" placeholder="Enter your username"/>

                </div>
                <div class="mb-3">
                    <label class="form-label">
                        Password
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password"/>

                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe"/>
                    <label class="form-check-label" for="RememberMe">Remember me</label>
                </div>
                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-primary w-100">Sign In</button>
                </div>
                <div class="text-center mt-3">
                    <p>Don't have an account? <a asp-action="SignUp" asp-controller="Account">Sign up here</a>.</p>
                </div>
                <div class="text-danger mt-2" asp-validation-summary="ModelOnly"></div>
            </form>
        </div>
    </div>
</section>

<script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>